<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab03.ui.MainWindowController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" left="10.0" bottom="10.0" />
            </padding>
            <Label text="Eventos Disponíveis">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <TableView fx:id="eventosTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nomeColumn" prefWidth="250.0" text="Nome do Evento" />
                    <TableColumn fx:id="dataColumn" prefWidth="120.0" text="Data" />
                    <TableColumn fx:id="precoColumn" prefWidth="100.0" text="Preço (R$)" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="10.0" right="10.0" left="10.0" bottom="10.0" />
            </padding>
            <Label text="Detalhes do Evento">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
        </VBox>
    </right>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" text="Comprar Ingresso" />
            <Button mnemonicParsing="false" text="Ver Meus Ingressos" />
            <Button mnemonicParsing="false" text="Acessar Marketplace" />
        </HBox>
    </bottom>
</BorderPane>
